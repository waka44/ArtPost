<!DOCTYPE html>
<html>
  <head>
    <title>ArtPost</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark  border-bottom">
    <div class="container">
      
      <li class=" p-1 border  list-group-item">
        <%= link_to root_path, class:"nav nav-link text-dark" do %>
        <i class="fas fa-solid fa-house-user"></i>
        <% end %>
        </li>
        <% if customer_signed_in? %>


            <li class=" p-1 border  list-group-item">

           <%= link_to customer_path(current_customer), class:"nav nav-link text-dark" do %>
           <i class="fas fa-solid fa-user"></i>マイページ
            <% end %>
          </li>

          <li class=" p-1 border  list-group-item">
            <%= link_to  arts_path, class:"nav-link text-dark" do %>
            <i class="fas fa-solid fa-palette"></i>投稿一覧
            <% end %>
          </li>

          <li class=" p-1 border  list-group-item">
            <%= link_to  new_art_path, class:"nav-link text-dark" do %>
            <i class="fas fa-pencil-ruler"></i>新規投稿
            <% end %>
          </li>

          <li class=" p-1 border  list-group-item">
            <%= link_to destroy_customer_session_path, method: :delete, class:" nav-link text-dark" do %>
            <i class="fas fa-share-square"></i>ログアウト
            <% end %>
          </li>

          <% else %>
          <% if admin_signed_in? %>

          <% else %>

          <%= render 'layouts/header' %>

         <% end %>
          <% end %>

        </ul>
      </div>
      </div>
    </nav>
    </header>
    <%= yield %>
  </body>
</html>
