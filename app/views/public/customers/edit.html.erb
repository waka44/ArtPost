<div class='container px-5 px-sm-0'>
    <h1>プロフィール編集</h1>
    <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>

    <h4>ニックネーム</h4>
    <%= f.text_field :name %>

    <h4>プロフィール</h4>
    <%= f.text_field :body %>

    <%= f.submit '更新'%>

    <% end %>
</div>